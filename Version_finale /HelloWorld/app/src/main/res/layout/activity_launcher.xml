<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Launcher">

    <TextView
        android:id="@+id/introdoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Bienvenue dans votre espace My Ehler-Danlos/HSD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/qauth1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="PrÃ©nom:"
        app:layout_constraintTop_toBottomOf="@id/introdoc"
        app:layout_constraintStart_toStartOf="@id/reponseqauth1" />

    <EditText
        android:id="@+id/reponseqauth1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qauth1" />

    <TextView
        android:id="@+id/qauth2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOM:"
        app:layout_constraintTop_toBottomOf="@id/reponseqauth1"
        app:layout_constraintStart_toStartOf="@id/reponseqauth1" />

    <EditText
        android:id="@+id/reponseqauth2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/qauth2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/qauth3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identifiant:"
        app:layout_constraintTop_toBottomOf="@id/reponseqauth2"
        app:layout_constraintStart_toStartOf="@id/reponseqauth1" />

    <EditText
        android:id="@+id/reponseqauth3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qauth3" />

    <TextView
        android:id="@+id/qauth4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe:"
        app:layout_constraintTop_toBottomOf="@id/reponseqauth3"
        app:layout_constraintStart_toStartOf="@id/reponseqauth1" />

    <EditText
        android:id="@+id/reponseqauth4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qauth4" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:onClick="ChangerPageConnexion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/creercompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S'inscrire"
        android:onClick="ChangerPageInscription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>